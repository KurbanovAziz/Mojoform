<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_activity_background">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttons_block">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/page_title_block"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="7dp">

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/page_name"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <TextView
                        android:id="@+id/template_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="#ff4c3d5f"
                        android:textSize="17sp" />
                </HorizontalScrollView>


                <TextView
                    android:id="@+id/page_name"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/page_title_background"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLength="18"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text=""
                    android:textColor="#ff4c3d5f"
                    android:textSize="16sp" />

            </RelativeLayout>

            <FrameLayout
                android:id="@+id/root_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/page_title_block"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="12dp" />

            <FrameLayout
                android:id="@+id/page_selector_block"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/page_title_block"
                android:layout_below="@+id/page_title_block">

                <include
                    layout="@layout/page_selector_window"
                    android:visibility="gone" />
            </FrameLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/buttons_block"
        android:layout_width="match_parent"
        android:layout_height="69.5dp"
        android:layout_alignParentBottom="true"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:visibility="gone">


        <FrameLayout
            android:id="@+id/left_arrow"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="right|center_vertical"
                android:adjustViewBounds="true"
                android:src="@drawable/left_arrow" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/main_buttons_block"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="visible">

            <FrameLayout
                android:layout_width="140dp"
                android:layout_height="54dp"
                android:layout_marginTop="12dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/purple_btn_with_shadow" />

                <TextView
                    android:id="@+id/hold_task_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:paddingBottom="13dp"
                    android:text="@string/hold"
                    android:textColor="@android:color/white"
                    android:textSize="15.5sp" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/finish_btn_container"
                android:layout_width="140dp"
                android:layout_height="54dp"
                android:layout_marginTop="12dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="@drawable/green_btn_with_shadow" />

                <TextView
                    android:id="@+id/finish_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:paddingBottom="13dp"
                    android:text="@string/finish"
                    android:textColor="@android:color/white"
                    android:textSize="15.5sp" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/finished_buttons_block"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="gone">

            <FrameLayout
                android:id="@+id/download_pdf_btn_container"
                android:layout_width="150dp"
                android:layout_height="54dp"
                android:layout_marginTop="12dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/purple_btn_with_shadow" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:paddingBottom="13dp"
                    android:text="@string/save_as_pdf"
                    android:textColor="@android:color/white"
                    android:textSize="15.5sp" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/close_btn_container"
                android:layout_width="150dp"
                android:layout_height="54dp"
                android:layout_marginTop="12dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="@drawable/green_btn_with_shadow" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:paddingBottom="13dp"
                    android:text="@string/close"
                    android:textColor="@android:color/white"
                    android:textSize="15.5sp" />
            </FrameLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/right_arrow"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="right">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="left|center_vertical"
                android:adjustViewBounds="true"
                android:rotation="180"
                android:src="@drawable/left_arrow" />
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/select_btn_popup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />
</RelativeLayout>