<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_corners_round"
    android:backgroundTint="@color/dialog_bg_dark">

    <LinearLayout
        android:id="@+id/dialog_record_audio_container_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/dialog_record_audio_tv_cancel"
            style="@style/Dialog.RecordAudio.Menu.TextView"
            android:layout_weight="1"
            android:text="@string/dialog_record_audio_cancel" />

        <TextView
            android:id="@+id/dialog_record_audio_tv_record"
            style="@style/Dialog.RecordAudio.Menu.TextView"
            android:layout_weight="1"
            android:text="@string/dialog_record_audio_record" />

        <TextView
            android:id="@+id/dialog_record_audio_tv_save"
            style="@style/Dialog.RecordAudio.Menu.TextView"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/dialog_record_audio_save" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_record_audio_container_buttons"
        app:layout_constraintVertical_bias=".2">

        <Chronometer
            android:id="@+id/dialog_record_audio_chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_ui_medium"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/dialog_record_audio_iv_start"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_record" />

            <ImageView
                android:id="@+id/dialog_record_audio_iv_control"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_record_play" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>