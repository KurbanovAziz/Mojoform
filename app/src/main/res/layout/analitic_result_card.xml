<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginBottom="7dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/notification_card_background" />

    <View
        android:id="@+id/vNotificationUnread"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/notification_unread_border"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="23dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/vMainNotificationBlock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/notification_bell"

                    android:layout_width="14dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="6dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/bell_task"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/notification_title"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textColor="#4c3d5f"
                        android:textSize="15sp"
                        tools:text="Моя задача на все веремна всегда и везде" />

                    <TextView
                        android:id="@+id/notification_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textColor="#4c3d5f"
                        android:textSize="14sp"
                        tools:text="16 марта 2017 | 17:00" />

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/more_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="-5dp"
                android:adjustViewBounds="true"
                android:src="@drawable/more_icon"
                android:visibility="gone" />
        </LinearLayout>

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/vExpandable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:el_expanded="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNotificationDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="43dp"
                    android:paddingRight="15dp"
                    android:textColor="#4c3d5f"
                    android:textSize="14sp"
                    tools:text="16 марта 2017 | 17:00" />

                <LinearLayout
                    android:id="@+id/vButtonsBlock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="18dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btDownloadPdf"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/main_button_mojo"
                        android:gravity="center"
                        android:paddingHorizontal="20dp"
                        android:text="@string/open_pdf"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btDownloadDoc"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/main_button_mojo"
                        android:gravity="center"
                        android:paddingHorizontal="20dp"
                        android:text="@string/open_docs"
                        android:textColor="@android:color/white" />

                </LinearLayout>


                <ImageView
                    android:id="@+id/btClose"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="12dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/arrow_expand_close" />
                <Button
                    android:id="@+id/comments"
                    android:layout_width="160dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="#EBE1E1E1"
                    android:textSize="17dp"
                    android:background="@drawable/rounded_view"
                    android:text="Комментарии" />

            </LinearLayout>

        </net.cachapa.expandablelayout.ExpandableLayout>
    </LinearLayout>
</FrameLayout>