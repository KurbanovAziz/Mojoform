<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginEnd="20dp"
            app:cardCornerRadius="10dp"
            android:layout_marginStart="20dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_gravity="center">

            <LinearLayout
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:focusable="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Фильтры"
                        android:textColor="#4D6A7F"
                        android:textSize="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/krestik"
                        android:layout_width="15dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="right"
                        android:layout_toEndOf="@+id/label"
                        android:clickable="true"
                        android:gravity="right"
                        android:src="@drawable/krestik"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>



                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:text="Поиск по названию"
                    android:visibility="invisible"
                    android:textColor="#433A4D"
                    android:textSize="16dp"
                    android:textStyle="bold" />
                <RadioGroup
                    android:id="@+id/read_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_marginBottom="10dp"
                    android:checkedButton="@+id/radio_all_read"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radio_not_read"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Не прочитанные"
                        android:layout_gravity="left"
                        android:textColor="#4D6A7F"
                        android:buttonTint="#4D6A7F"

                        android:layout_weight="1" />

                    <RadioButton
                        android:id="@+id/radio_read"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Прочитанные"
                        android:textColor="#4D6A7F"
                        android:buttonTint="#4D6A7F"
                        android:layout_weight="1" />

                    <RadioButton
                        android:id="@+id/radio_all_read"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#4D6A7F"
                        android:buttonTint="#4D6A7F"
                        android:text="Все"
                        android:layout_weight="1" />
                </RadioGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="10dp"
                    android:background="#4D6A7F" />
                <RadioGroup
                    android:id="@+id/orderGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:checkedButton="@+id/radio_new"

                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radio_new"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Новые вначале"
                        android:textColor="#4D6A7F"
                        android:buttonTint="#4D6A7F"
                        android:layout_weight="1" />

                    <RadioButton
                        android:id="@+id/radio_old"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Сначало старые"
                        android:textColor="#4D6A7F"
                        android:buttonTint="#4D6A7F"
                        android:layout_weight="1" />

                </RadioGroup>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#4D6A7F" />
                <LinearLayout
                    android:id="@+id/calendarLL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/calendar"/>
                    <TextView
                        android:id="@+id/calendarText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="#4D6A7F"
                        android:text="Выбрать промежуток"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#4D6A7F" />

                <FrameLayout
                    android:id="@+id/group_by_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <org.dev_alex.mojo_qa.mojo.custom_views.MultiSpinner
                        android:id="@+id/spin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#FFFFFF"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/show_dialog_icon" />
                        <TextView
                            android:id="@+id/organisations_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="#4D6A7F"
                            android:text="По организациям"/>
                    </LinearLayout>



                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#4D6A7F"
                    android:layout_marginBottom="10dp"/>
                <ImageView
                    android:id="@+id/okeyBTN"
                    android:layout_width="113dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ok_button"
                    android:clickable="true"
                    android:layout_marginBottom="10dp"
                    android:focusable="true" />






            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</FrameLayout>