<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBlue"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:background="@drawable/create_task_panel_bg"
        android:clipToPadding="true"
        android:paddingTop="2dp"
        android:scrollbars="none">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="24dp"
                android:paddingVertical="16dp">

                <TextView
                    android:layout_width="349dp"
                    android:layout_height="wrap_content"
                    android:text="@string/set_result_control_rules"
                    android:textColor="@color/textGrey"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/vRulesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <Button
                    android:id="@+id/btAddRange"
                    android:layout_width="210dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/blue_button_inverted"
                    android:gravity="center"
                    android:text="@string/add_one_more_range"
                    android:textAllCaps="false"
                    android:textColor="@color/textGrey"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:visibility="visible" />
            </LinearLayout>

            <ImageView
                android:id="@+id/btExit"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:src="@drawable/delete_icon"
                app:tint="@color/textGrey" />
        </FrameLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btSkip"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="15dp"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/blue_button"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:text="@string/skip"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btCreateAppointment"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="15dp"
            android:layout_marginStart="6dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/blue_button"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:text="@string/finish"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>