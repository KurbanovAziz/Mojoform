<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/notification_card_background"
    android:orientation="vertical">
<LinearLayout
    android:id="@+id/main_block"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="-18dp"
    android:layout_marginTop="5dp"
    android:orientation="horizontal"
    android:paddingBottom="20dp"
    android:paddingLeft="15dp"
    android:paddingRight="7dp"
    android:paddingTop="2dp">

    <ImageView
        android:id="@+id/panel_icon_imag"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:adjustViewBounds="true"
        android:src="@drawable/result" />


    <TextView
        android:id="@+id/panel_nam"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_weight="3"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="Прочее"
        android:textColor="#4c3d5f"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/panel_stat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:maxLines="2"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text=""
        android:textColor="#4c3d5f"
        android:textSize="17sp" />

</LinearLayout>
    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/vExpandable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:el_expanded="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
android:orientation="vertical">

            <TextView
                android:id="@+id/result_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:paddingRight="15dp"
                android:textColor="#4c3d5f"
                android:textSize="12sp"
                tools:text="16 марта 2017 | 17:00" />
            <TextView
                android:id="@+id/information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:paddingRight="15dp"
                android:textColor="#4c3d5f"
                android:textSize="16sp"
                tools:text="Результат:
баллы 78.7
проценты: 76,07%

Исполнитель:
Менеджер смены

Время завершения:
17 декабря 2019 | 14:21" />



            <LinearLayout
                android:id="@+id/vButtonsBlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btDownloadPdf"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/main_button_mojo"
                    android:gravity="center"
                    android:paddingHorizontal="20dp"
                    android:text="@string/open_pdf"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btDownloadDoc"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/main_button_mojo"
                    android:gravity="center"
                    android:paddingHorizontal="20dp"
                    android:text="@string/open_docs"
                    android:textColor="@android:color/white" />

            </LinearLayout>


            <ImageView
                android:id="@+id/btClose"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:paddingTop="14dp"
                android:paddingBottom="12dp"
                android:scaleType="centerInside"
                android:src="@drawable/arrow_expand_close" />


        </LinearLayout>

    </net.cachapa.expandablelayout.ExpandableLayout>
</LinearLayout>